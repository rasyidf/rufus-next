<Page
    x:Class="Rufus.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0">
            <TextBlock 
            Style="{StaticResource PageTitleStyle}" Text="Rufus - The Reliable USB Formatting Utility" FontSize="16" FontWeight="Bold"/>
            <TextBlock Text="Version 4.3 (Build 2090)" FontSize="14" Margin="0,5,0,0"/>
            <TextBlock Text="Copyright © 2011-2023 Pete Batard" FontSize="14" Margin="0,5,0,0"/>
            <HyperlinkButton Content="https://rufus.ie" NavigateUri="https://rufus.ie" FontSize="14" Margin="0,5,0,0"/>
            <HyperlinkButton Content="mailto:support@akeo.ie" NavigateUri="mailto:support@akeo.ie" FontSize="14" Margin="0,5,0,0"/>
            <TextBlock Text="Report bugs or request enhancements at:" FontSize="14" Margin="0,10,0,0"/>
            <HyperlinkButton Content="https://github.com/pbatard/rufus/issues" NavigateUri="https://github.com/pbatard/rufus/issues" FontSize="14" Margin="0,5,0,0"/>
            <Button Margin="0,5,0,0">License</Button>
        </StackPanel>

    </Grid>
</Page>
